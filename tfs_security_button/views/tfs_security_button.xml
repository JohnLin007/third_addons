<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_groups_form_inherit" model="ir.ui.view">
            <field name="name">群组</field>
            <field name="model">res.groups</field>
            <field name="inherit_id" ref="base.view_groups_form"/>
            <field name="arch" type="xml">
                <page name="record_rules" position="after">
                    <page string="按钮权限" name="button_groups">
                        <field name="button_groups"/>
                    </page>
                </page>
            </field>
        </record>

        <record id="form_tfs_view_button" model="ir.ui.view">
            <field name="name">tfs.view.button.form</field>
            <field name="model">tfs.view.button</field>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <group>
                        <group>
                            <field name="name" readonly="True"/>
                            <field name="model_id" readonly="True"/>
                        </group>
                        <group>
                            <field name="view_id" readonly="True"/>
                            <field name="groups" widget="many2many_tags" readonly="True"/>
                        </group>
                    </group>
                    <footer></footer>
                </form>
            </field>
        </record>
        <record id="tree_tfs_view_button" model="ir.ui.view">
            <field name="name">tfs.view.button.tree</field>
            <field name="model">tfs.view.button</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="view_id"/>
                    <field name="groups" widget="many2many_tags"/>
                </tree>
            </field>
        </record>
        <record id="search_tfs_view_button_view" model="ir.ui.view">
            <field name="name">按钮搜索视图</field>
            <field name="model">tfs.view.button</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="model_id"/>
                </search>
            </field>
        </record>
        <record id="action_tfs_view_button" model="ir.actions.act_window">
            <field name="name">按钮</field>
            <field name="res_model">tfs.view.button</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="search_tfs_view_button_view"/>
        </record>
        <menuitem name="按钮" id="menu_tfs_view_button" parent="base.next_id_2" action="action_tfs_view_button"
                  sequence="3"/>


    </data>
</odoo>